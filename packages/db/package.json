{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@acme/db",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./constants": {
      "types": "./dist/src/constants.d.ts", 
      "default": "./dist/src/constants.js"
    },
    "./db": {
      "types": "./dist/src/db.d.ts",
      "default": "./dist/src/db.js"
    },
    "./mutations": {
      "types": "./dist/src/mutations.d.ts",
      "default": "./dist/src/mutations.js"
    },
    "./orm": {
      "types": "./dist/src/orm.d.ts",
      "default": "./dist/src/orm.js"
    },
    "./queries": {
      "types": "./dist/src/queries.d.ts",
      "default": "./dist/src/queries.js"
    },
    "./schema": {
      "types": "./dist/src/schema.d.ts",
      "default": "./dist/src/schema.js"
    },
    "./schemas": {
      "types": "./dist/src/schemas.d.ts",
      "default": "./dist/src/schemas.js"
    },
    "./types": {
      "types": "./dist/src/types.d.ts",
      "default": "./dist/src/types.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push",
    "db:seed": "bun ./src/seed.ts",
    "db:add-users": "tsx ./src/add-real-users.ts",
    "db:create-telegram": "tsx ./src/create-telegram-tables.ts",
    "db:studio": "drizzle-kit studio",
    "db:setup": "tsx ./src/setup-db.ts"
  },
  "dependencies": {
    "@types/node": "~22.15.2",
    "dotenv": "~16.5.0",
    "drizzle-orm": "~0.43.1",
    "drizzle-zod": "~0.7.1",
    "pg": "~8.15.5",
    "postgres": "~3.4.5",
    "zod": "~3.24.3"
  },
  "devDependencies": {
    "@acme/id": "workspace:~",
    "@acme/typescript-config": "workspace:~",
    "@faker-js/faker": "~9.7.0",
    "bun": "~1.2.10",
    "drizzle-kit": "~0.31.0",
    "tsx": "~4.19.3",
    "typescript": "~5.8.3"
  }
}
