{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@acme/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./constants": "./src/constants.ts",
    "./db": "./src/db.ts",
    "./mutations": "./src/mutations.ts",
    "./orm": "./src/orm.ts",
    "./queries": "./src/queries.ts",
    "./schema": "./src/schema.ts",
    "./schemas": "./src/schemas.ts",
    "./types": "./src/types.ts"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push",
    "db:seed": "bun ./src/seed.ts",
    "db:add-users": "tsx ./src/add-real-users.ts",
    "db:create-telegram": "tsx ./src/create-telegram-tables.ts",
    "db:studio": "drizzle-kit studio",
    "db:setup": "tsx ./src/setup-db.ts"
  },
  "dependencies": {
    "@types/node": "~22.15.2",
    "dotenv": "~16.5.0",
    "drizzle-orm": "~0.43.1",
    "drizzle-zod": "~0.7.1",
    "pg": "~8.15.5",
    "postgres": "~3.4.5",
    "zod": "~3.24.3"
  },
  "devDependencies": {
    "@acme/id": "workspace:~",
    "@acme/typescript-config": "workspace:~",
    "@faker-js/faker": "~9.7.0",
    "bun": "~1.2.10",
    "drizzle-kit": "~0.31.0",
    "tsx": "~4.19.3",
    "typescript": "~5.8.3"
  }
}
