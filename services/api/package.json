{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@acme/api",
  "version": "0.0.12",
  "private": true,
  "scripts": {
    "dev": "tsx watch ./index.ts | pino-pretty -L severity -m message",
    "build": "tsc --noEmit --skipLibCheck",
    "build:force": "tsc -p ./tsconfig.build.json --noEmitOnError false --skipLibCheck true",
    "start": "node ./dist/index.js",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "bump": "npm run version:patch && echo \"New version: $(node -p 'require(\"./package.json\").version')\""
  },
  "dependencies": {
    "@acme/db": "workspace:~",
    "@fastify/autoload": "~6.3.0",
    "@fastify/cors": "~11.1.0",
    "bcrypt": "~5.1.1",
    "dotenv": "~16.5.0",
    "drizzle-orm": "~0.43.1",
    "fastify": "~5.3.2",
    "fastify-plugin": "~5.0.1",
    "zod": "~3.24.3",
    "zod-to-json-schema": "~3.24.5"
  },
  "devDependencies": {
    "@types/node": "~22.15.2",
    "pino-pretty": "~13.0.0",
    "tsx": "~4.19.3",
    "typescript": "~5.8.3"
  }
}
